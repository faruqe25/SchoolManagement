@model List<SchoolManagement.Areas.Teachers.ViewModels.StdntAttndncVm>

<p>Class: @ViewBag.ClassName</p>
<p>Section: @ViewBag.SectionName</p>
<p>Subject: @ViewBag.SubjectName</p>



<p class="h2" style="text-align:center;">Attendace  Script<br /><div style="border-bottom:    1px solid #686868"></div> </p>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <td class="h3">Serial</td>
            <td class="h3">ID</td>
            <td class="h3">Name</td>
            <td class="h3">Total</td>
            <td class="h3">Absence</td>
            <td class="h3">Present</td>
            <td class="h3">Present( % )</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="h4">@item.stdntattserialnoVM</td>
                <td class="h4">@item.stdntidVM</td>
                <td class="h4">@item.Name</td>
                <td class="h4">@item.Total</td>

                <td class="h4">@(item.Total - item.Present)</td>
                <td class="h4">@item.Present</td>
                @{
                    var a = 0;
                    var b = 0;
                    var p = 0;
                    a = item.Present * 100;
                    b = item.Total;
                    p = a / b;


                }

                <td class="h4">@p %</td>


            </tr>
        }
    </tbody>
</table>


