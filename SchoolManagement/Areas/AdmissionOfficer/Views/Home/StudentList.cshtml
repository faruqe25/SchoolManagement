
@model X.PagedList.IPagedList<SchoolManagement.Areas.AdmissionOfficer.ViewModels.StudentVm>
@using X.PagedList.Mvc.Core

<div class="container" style="overflow-x:auto;">
    <p class="h2" style="text-align:center;">Student List<br /><div style="border-bottom:    1px solid #686868"></div> </p>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th class="h3">
                    Serial
                </th>
                <th class=" h3 ">
                    Photo
                </th>
                <th class=" h3  ">
                    ID
                </th>
                <th class=" h3  ">
                    Name
                </th>
                <th class=" h3  ">
                    Class
                </th>
                <th class=" h3  ">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class=" h4  ">@item.Serial</td>
                @{
                    var imageSource = "~/images/" + (item.stdntphotoVM ?? "NoImage.png");
                }
                <td class=" h4  "><img style="width:100px;height:100px" src="@imageSource" asp-append-version="true" /></td>
                <td class=" h4  ">@item.stdntidVM</td>
                <td class=" h4  ">@item.stdntnameVM</td>
                <td class=" h4  ">@item.stdntclsNameVM</td>
                <td class=" h4  ">
                    <a asp-action="UpdateStudent" asp-controller="Home" asp-area="AdmissionOfficer" asp-route-id="@item.stdntidVM"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="StudentDetails" asp-controller="Home" asp-area="AdmissionOfficer" asp-route-id="@item.stdntidVM"><i class="fa fa-info-circle" style="font-size:25px;color:dodgerblue"></i></a>

                </td>
            </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager(Model, c => Href("~/AdmissionOfficer/Home/StudentList?page=" + c), X.PagedList.Mvc.Common.PagedListRenderOptionsBase.ClassicPlusFirstAndLast)

</div>