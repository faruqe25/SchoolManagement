@model X.PagedList.IPagedList<SchoolManagement.Areas.AdmissionOfficer.ViewModels.TeacherVm>
@using X.PagedList.Mvc.Core
    
        <p class="h2" style="text-align:center;">Teacher List<br /><div style="border-bottom:1px solid #686868"></div> </p>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th class="h3">
                        Serial No
                    </th>
                    <th class=" h3 ">
                        Photo
                    </th>
                    <th class=" h3  ">
                        Name
                    </th>
                    <th class=" h3  ">
                        Designation
                    </th>
                    <th class=" h3  ">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class=" h4  ">@item.QlSLVM</td>
                    @{
                        var imageSource = "~/images/" + (item.TcrphotoVM ?? "NoImage.png");
                    }
                    <td class=" h4  "><img style="width:100px;height:100px" src="@imageSource" asp-append-version="true" /></td>
                    <td class=" h4  ">@item.TcrnameVM</td>
                    <td class=" h4  ">@item.TcrdesigVM</td>
                    <td class=" h4  ">
                        <a asp-action="UpdateTeacher" asp-controller="Home" asp-area="AdmissionOfficer" asp-route-id="@item.TcridVM"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a>
                        &nbsp;&nbsp;&nbsp;
                        <a asp-action="TeacherDetails" asp-controller="Home" asp-area="AdmissionOfficer" asp-route-id="@item.TcridVM"><i class="fa fa-info-circle" style="font-size:25px;color:dodgerblue"></i></a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, c => Href("~/Admin/AdmissionOfficer/TeacherList?page=" + c), X.PagedList.Mvc.Common.PagedListRenderOptionsBase.ClassicPlusFirstAndLast)

    