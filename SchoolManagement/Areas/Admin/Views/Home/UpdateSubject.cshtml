@model SchoolManagement.Areas.Admin.ViewModels.SubjectVm


    <form style="margin-top:5%;padding:20px;background-color:ghostwhite; box-shadow:0 5px 15px #686868;border-radius:10px 15px;" asp-area="Admin" asp-controller="Home" asp-action="UpdateSubject" method="post">
        <h1 style="text-align:center;font-family:'Century Gothic';font-weight:bold;">Update Subject</h1>
        <hr style="width:70%;" />

        <div class="row" style="padding:10px;">
            @*row 1*@
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <label for="subjecttitle">Enter Subject Title:</label>
                    <input type="text" class="form-control" placeholder="Subject Title" asp-for="SubjectTitle" />
                    <span class="text-danger" asp-validation-for="SubjectTitle"></span>
                    <input type="hidden" asp-for="SubjectId" />
                </div>
            </div>
        </div>
        <div class="row" style="padding:10px;">
            @*row 2*@
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2" style="float:right;">
                <button class="btn btn-success" type="submit" style="float:right;">Update</button>
            </div>
        </div>
    </form>
