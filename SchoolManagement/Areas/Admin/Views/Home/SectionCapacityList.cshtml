
@model X.PagedList.IPagedList<SchoolManagement.Areas.Admin.ViewModels.SectionCapacityVm>
@using X.PagedList.Mvc.Core

<p class="h2" style="text-align:center;">Class with section list<br /><div style="border-bottom:    1px solid #686868"></div> </p>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th class="h3">
                Serial
            </th>
            <th class=" h3 ">
                Class Name
            </th>
            <th class=" h3  ">
                Section
            </th>
            <th class=" h3  ">
                Capacity
            </th>
            <th class=" h3  ">
                Year
            </th>
            <th class=" h3  ">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class=" h4  ">@item.Sl </td>
                <td class=" h4  ">@item.ClassName </td>
                <td class=" h4  ">@item.SectionName </td>
                <td class=" h4  ">@item.Capacity </td>
                <td class=" h4  ">@item.SectionYear </td>
                <td class=" h4  "><a asp-action="UpdateSectionCapacity" asp-controller="Home" asp-area="Admin" asp-route-u="@item.SectionCapacityId"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, c => Href("~/Admin/Home/SectionCapacityList?page=" + c), X.PagedList.Mvc.Common.PagedListRenderOptionsBase.ClassicPlusFirstAndLast)

